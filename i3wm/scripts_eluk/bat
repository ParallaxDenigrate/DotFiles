#!/bin/bash

DATA=$( acpi )

STATUS=$( echo $DATA | cut -d " " -f 3 | sed -e "s/,//" )
CHARGE=$( echo $DATA | cut -d " " -f 4 | sed -e "s/,//;s/%//" )

case $STATUS in
  Unknown)
    echo "<b>ğŸ”‹</b>";;
  Full)
    echo "<b>ğŸ”‹</b>";;
  Charging)
    echo "ğŸ”‹<b>| âš¡$CHARGE% |</b>";;
  Discharging)
    echo "ğŸ”‹<b>| â˜¢ï¸ $CHARGE% |</b>"
    if [ $CHARGE -lt "15" ]
    then
      notify-send -u critical -t 3000 "ğŸ”‹ğŸ”Œ Battery Low: $CHARGE%"
    fi
esac
