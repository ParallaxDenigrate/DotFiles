#!/bin/bash

PING=$( ping -c 1 -w 3 8.8.8.8 2> /dev/null )
SUC=$?

if [ $SUC -eq 0 ]
then
  IP=$( curl -s --interface tun0 ipv4.icanhazip.com | cut -d "." -f 3-4 | cut -d ":" -f 7-8)
  GEOLOC=$( curl -s --interface tun0 ipinfo.io/$(curl -s --interface tun0 icanhazip.com) | grep -e city | cut -d ":" -f 2 | sed -e "s/ \"//g" | sed -e "s/\"//" | sed -e "s/\,//" )
  if [ "$GEOLOC" == "Canton" ]
  then
    echo "  ğŸ›°<b><span background=\"red\">[ğŸš¨]| $GEOLOC($IP) |</span></b>"
  else
    echo "  ğŸ›°<b><span background=\"green\">[ğŸ›¡]| $GEOLOC($IP) |</span></b>"
  fi
elif [ $SUC -eq 1 ]
then
  echo "  ğŸ›°<b><span background=\"orange\">|ğŸš§|</span></b>"
elif [ $SUC -eq 2 ]
then
